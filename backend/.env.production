# Configuración de Seguridad para Aplicación de Escritorio
# IMPORTANTE: Cambiar estas claves en producción

# ========================================
# CONFIGURACIÓN DE SEGURIDAD CRÍTICA
# ========================================
JWT_SECRET=TelwagenDesktopApp2024_SuperSecretKey_ChangeInProduction
ENCRYPTION_KEY=TelwagenDesktopApp2024_EncryptionKey_ChangeInProduction

# ========================================
# CONFIGURACIÓN DEL SERVIDOR LOCAL
# ========================================
PORT=3000
HOST=localhost
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS LOCAL
# ========================================
DB_PATH=./telwagen.db
DB_TIMEOUT=30000
DB_MAX_CONNECTIONS=10
DB_JOURNAL_MODE=WAL
DB_SYNCHRONOUS=NORMAL
DB_CACHE_SIZE=2000

# ========================================
# CONFIGURACIÓN DE SEGURIDAD ADAPTADA PARA DESKTOP
# ========================================
HELMET_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
# Rate limit más alto para aplicación de escritorio

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# CONFIGURACIÓN DE BACKUP AUTOMÁTICO
# ========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=86400000
BACKUP_RETENTION_DAYS=1460
BACKUP_DIRECTORY=./backups
BACKUP_COMPRESSION=true

# ========================================
# CONFIGURACIÓN DE CACHÉ
# ========================================
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# CONFIGURACIÓN DE PAGINACIÓN
# ========================================
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100
PAGINATION_DEFAULT_OFFSET=0

# ========================================
# CONFIGURACIÓN DE FACTURACIÓN
# ========================================
FACTURA_PREFIJO=C
FACTURA_FORMATO=C{numero}/{año}
IGIC_PORCENTAJE=9.5
FACTURA_DIAS_VENCIMIENTO=30
FACTURA_FORMATO_NUMERO=000

# ========================================
# CONFIGURACIÓN DE PRODUCTOS
# ========================================
PRODUCTOS_CATEGORIAS=vehiculo,servicio,accesorio,mantenimiento
PRODUCTOS_STOCK_MINIMO=0
PRODUCTOS_STOCK_MAXIMO=999
PRODUCTOS_AUTO_CREAR_DESDE_COCHE=true

# ========================================
# CONFIGURACIÓN DE EMPRESA
# ========================================
EMPRESA_NOMBRE=Telwagen Car Ibérica, S.L.
EMPRESA_CIF=B-93.289.585
EMPRESA_DIRECCION=C. / Tomás Miller N° 48 Local
EMPRESA_TELEFONO=+34 928 123 456
EMPRESA_EMAIL=info@telwagen.com
EMPRESA_CODIGO_POSTAL=35007
EMPRESA_PROVINCIA=Las Palmas
EMPRESA_PAIS=España
EMPRESA_CODIGO_PAIS=ES
EMPRESA_REGIMEN_FISCAL=General

# ========================================
# CONFIGURACIÓN DE FIRMA DIGITAL
# ========================================
FIRMA_DIGITAL_ENABLED=true
FIRMA_DIGITAL_ALGORITMO=sha256
FIRMA_DIGITAL_DIR_CERTIFICADOS=./certificados
FIRMA_DIGITAL_DIR_FIRMAS=./firmas
FIRMA_DIGITAL_AUTO_DETECTAR=true

# ========================================
# CONFIGURACIÓN DE VERIFACTU
# ========================================
VERIFACTU_ENABLED=true
VERIFACTU_URL=https://www2.agenciatributaria.gob.es/wlpl/REGD-JDIT/VeriFactu
VERIFACTU_TIMEOUT=30000
VERIFACTU_RETRY_ATTEMPTS=3

# ========================================
# CONFIGURACIÓN ESPECÍFICA PARA ELECTRON
# ========================================
ELECTRON_MODE=true
ELECTRON_SECURE_MODE=true
ELECTRON_ALLOW_LOCALHOST=true
ELECTRON_DISABLE_CORS_FOR_LOCAL=false


