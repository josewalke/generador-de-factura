{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio con Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "desktop",
    "app"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.telwagen.generador-facturas",
    "productName": "Generador de Facturas Telwagen",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "../backend/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!node_modules/**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "public/LOGO.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/LOGO.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/LOGO.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^1.11.0",
    "puppeteer": "^24.18.0"
  }
}
